---
import { Icon } from 'astro-icon'

const { icon = 'mdi:rocket', title = 'Title' } = Astro.props
---

<div class="feature flex flex-col gap-4">
  <Icon name={icon} class="icono"/>
  <div class="content">
    <h3>{title}</h3>
    <p>
      <slot>Lorem ipsum dolor sit amet consectetur adipisicing elit. Hic, corporis.</slot>
    </p>
    <a
      class="button has-icon color-secondary phone"
      href="tel:5514476309"
    >
      <Icon pack="bi" name="phone" />
      Llamada
    </a>
  </div>
</div>

<style lang="scss">
  @use '../assets/scss/base/breakpoint' as *;
  .content p {
    margin-bottom: 15px;
  }
  .button {
    display: flex;
    padding: 0.75rem 1rem;
    font-weight: bold;
    text-decoration: none;
    text-align: center;
    color: var(--neutral-900);
    background-color: var(--primary-100);
    border: 3px solid var(--primary-100);
    border-radius: 3px;
    width: 150px;
    transition: all 0.15s ease-in-out;
  }
  .button .color-secondary:hover {
    transition: all 0.15s ease-in-out;
    background-color: var(--primary-100);
  }
  .button .color-secondary {
    background-color: var(--secondary-100);
    border-color: var(--secondary-100);
  }
  .feature {
    position: relative;
    width: calc(100% - 0.5rem);
    padding: 2rem;

    > * {
      position: relative;
      z-index: 2;
    }

    @include breakpoint(large) {
      width: 100%;
    }

    &::before,
    &::after {
      content: '';
      position: absolute;
    }

    &::before {
      inset: 0;
      background-color: var(--neutral-100);
      border: 3px solid var(--neutral-700);
      border-radius: 1rem;
      box-shadow: 0 0 0 6px var(--neutral-100);
      z-index: 1;
    }

    &::after {
      background-color: var(--action-color);
      inset: 1rem -0.85rem -0.85rem 1rem;
      border-radius: 1rem;
      z-index: 0;
    }
  }

  :global(.feature .icono) {
    width: 4rem;
    color: var(--action-color);
  }
  .feature .llamada {
    color: var(--neutral-900) !important;
  }

  :global(.darkmode .feature::before) {
    background-color: var(--dark-100);
    box-shadow: 0 0 0 6px var(--dark-100);
  }
</style>
