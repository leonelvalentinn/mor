---
import { Media } from 'accessible-astro-components'
const { imgSrc } = Astro.props
---

<a class="card-1" href="https://api.whatsapp.com/send?phone=526255890381" target="_blank">
  <div class="circle"></div>
  <div class="circle"></div>
  <div class="card-inner-1">
    <div class="container-promo">
      <h4 class="text-xl mb-5">Da Click y Agenda tu Cita</h4>
      <div class="img-promo">
        <Media class="rounded-md" src={imgSrc} />
      </div>
    </div>
  </div>
</a>

<style>
  .container-promo {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  a {
    text-decoration: none;
  }
  .img-promo {
    width: 70%;
    height: auto;
  }
  .card-1 {
  width: 100%;
  height: 100%;
  transition: all 0.2s;
  position: relative;
  cursor: pointer;
  }

  .card-inner-1 {
    width: inherit;
    height: inherit;
    background: rgba(255,255,255,.05);
    box-shadow: 0 0 10px rgba(0,0,0,0.25);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    padding: 20px 20px 30px 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .card-1:hover {
    transform: scale(1.04) rotate(1deg);
  }

  .circle {
    width: 100px;
    height: 100px;
    background: radial-gradient(var(--secondary-200), var(--primary-100));
    border-radius: 50%;
    position: absolute;
    animation: move-up6 2s ease-in infinite alternate-reverse;
  }

  .circle:nth-child(1) {
    top: -25px;
    left: -25px;
  }

  .circle:nth-child(2) {
    bottom: -25px;
    right: -25px;
    animation-name: move-down1;
  }

  @keyframes move-up6 {
    to {
      transform: translateY(-10px);
    }
  }

  @keyframes move-down1 {
    to {
      transform: translateY(10px);
    }
  }
</style>